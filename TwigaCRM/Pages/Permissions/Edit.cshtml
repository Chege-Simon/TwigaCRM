@page
@model TwigaCRM.Pages.Permissions.EditModel

@{
    ViewData["Title"] = "Edit Permission";
}

<div class="card">
    <div class="card-header row">
        <h3 class="card-title col-md-10">Edit Permission</h3>
        <span class="col-md-2">
            @*<a class="btn btn-success" href="" id="Input" data-toggle="modal" data-target="#InputModal">New Role</a>*@
        </span>
    </div>
    <!-- /.card-header -->
    <div class="card-body row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Permission.Id" />
            <div class="form-group">
                <label asp-for="Permission.Name" class="control-label"></label>
                <input asp-for="Permission.Name" class="form-control" />
                <span asp-validation-for="Permission.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Permission.Description" class="control-label"></label>
                <input asp-for="Permission.Description" class="form-control" />
                <span asp-validation-for="Permission.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
<div>
    <a asp-page="./Permissions">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
