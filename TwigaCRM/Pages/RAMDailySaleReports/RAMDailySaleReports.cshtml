@page
@model TwigaCRM.Pages.RAMDailySaleReports.IndexModel

@{
    ViewData["Title"] = "D.C.R";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<style>
    .select2-selection__rendered {
        line-height: 31px !important;
    }

    .select2-container .select2-selection--single {
        height: 35px !important;
    }

    .select2-selection__arrow {
        height: 34px !important;
    }
</style>
<div class="card">
    <div class="card-header row">
        <h3 class="card-title col-md-10">Daily Sales Reports</h3>
        <span class="col-md-2">
            @*<a class="btn btn-success" href="" data-toggle="modal" data-target="#InputModal">New D</a>*@
        </span>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table class="table table-bordered table-striped" id="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RAMDailySaleReport[0].RAM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RAMDailySaleReport[0].SalesDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RAMDailySaleReport[0].IsSubmitted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RAMDailySaleReport[0].ApprovalStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RAMDailySaleReport[0].UpdateAt)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.RAMDailySaleReport) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RAM.FirstName)
                @Html.DisplayFor(modelItem => item.RAM.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesDate)
            </td>
            <td>
                @if (item.IsSubmitted)
                {
                    <span>Yes</span>
                }
                else
                {
                    <span>No</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApprovalStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateAt)
            </td>
            <td>
                    <a asp-page="./Details" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Details" class="col-5"><i class="fa fa-info" aria-hidden="true"></i></a>
            </td>
        </tr>
}
    </tbody>
        </table>
    </div>
</div>
