@*New CropAndAnimal modal*@
<div class="modal fade" tabindex="-1" role="dialog" id="InputModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Crop / Animal</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="addForm">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group col-md-12">
                            <label asp-for="CropAndAnimal.Name" class="control-label"></label>
                            <input asp-for="CropAndAnimal.Name" class="form-control" />
                            <span asp-validation-for="CropAndAnimal.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="CropAndAnimal.Type" class="control-label"></label>
                            <select asp-for="CropAndAnimal.Type" class="form-control">
                                <option value="">-- Select Type --</option>
                                <option value="Animal">Animal</option>
                                <option value="Crop">Crop</option>
                            </select>
                            <span asp-validation-for="CropAndAnimal.Type" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="CropAndAnimal.SectorId" class="control-label">Sector</label>
                             <div class="row">
                                <select id="ddlSectors" asp-for="CropAndAnimal.SectorId" name="CropAndAnimal.SectorId" asp-items="ViewBag.Sectors" class="form-control" style="width: 100%">
                                    <option value="">--  Select Sector  --</option>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary" id="submit">Action</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script type="text/javascript">
    $(document).ready(function() {
      $("#ddlSectors").select2({
              dropdownParent: $("#InputModal")
      });
});
</script>
<script>
    $(document).ready(function() {
        $('button[data-toggle="tab"]').on('show.bs.tab', function (e) {
            changeSelect()
        })

        // Select2
        function changeSelect() {
            $("#ddlSectors").select2({
                tags: true,
                dropdownParent: $("#InputModal")
            })
        }
    });
</script>
<script type="text/javascript">
    //$(function () {
    //    $("#ddlSectors").select2();
    //});
    $("body").on("change", "#ddlSectors", function () {
        $("input[name=SectorId]").val($(this).find("option:selected").text());
    });
</script>
<script>
    $(document).ready(function(){
        $(".dataTable").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false, "orderCellsTop" : true,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#dataTable_wrapper .col-md-6:eq(0)');
});
</script>
<script type="text/javascript">
    $(document).ready(function(){
	$('button[data-toggle="tab"]').on('show.bs.tab', function(e) {
		localStorage.setItem('activeTab', $(e.target).attr('id'));
	});
	var activeTab = localStorage.getItem('activeTab');
	if(activeTab){
		$('#nav-tab #' + activeTab).tab('show');
	}
});
</script>
