                                @Html.DisplayFor(modelItem => cropandanimal.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => cropandanimal.Sector.NormalizedName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => cropandanimal.CreateAt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => cropandanimal.UpdateAt)
                            </td>
                            <td class="row"> 
                                 <a asp-page="./Edit" asp-route-id="@cropandanimal.Id" data-toggle="tooltip" data-placement="top" title="Edit" class="col-5"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a> |
                                 <a asp-page="./Details" asp-route-id="@cropandanimal.Id" data-toggle="tooltip" data-placement="top" title="Details" class="col-5"><i class="fa fa-info" aria-hidden="true"></i></a> 
