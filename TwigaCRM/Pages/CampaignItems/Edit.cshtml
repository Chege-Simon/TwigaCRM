@page
@model TwigaCRM.Pages.CampaignItems.EditModel

@{
    ViewData["Title"] = "Edit - Campaign Item";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<style>
    .select2-selection__rendered {
        line-height: 31px !important;
    }

    .select2-container .select2-selection--single {
        height: 35px !important;
    }

    .select2-selection__arrow {
        height: 34px !important;
    }
</style>
<div class="card">
    <div class="card-header row">
        <h3 class="card-title col-md-10">Edit Campaign Item</h3>
        <span class="col-md-2">
            @*<a class="btn btn-success" href="" id="Input" data-toggle="modal" data-target="#InputModal">New Role</a>*@
        </span>
    </div>
    <!-- /.card-header -->
    <div class="card-body row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form method="post" class="form-row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CampaignItem.Id" />
            <div class="form-group">
                <label asp-for="CampaignItem.Name" class="control-label"></label>
                <input asp-for="CampaignItem.Name" class="form-control" />
                <span asp-validation-for="CampaignItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CampaignItem.Description" class="control-label"></label>
                <input asp-for="CampaignItem.Description" class="form-control" />
                <span asp-validation-for="CampaignItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CampaignItem.Price" class="control-label"></label>
                <input asp-for="CampaignItem.Price" class="form-control" />
                <span asp-validation-for="CampaignItem.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

<div>
    <a asp-page="./CampaignItems">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
