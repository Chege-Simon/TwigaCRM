@page
@model TwigaCRM.Pages.Towns.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card">
    <div class="card-header row">
        <h3 class="card-title col-md-10">Edit Town</h3>
        <span class="col-md-2">
            @*<a class="btn btn-success" href="" id="Input" data-toggle="modal" data-target="#InputModal">New Role</a>*@
        </span>
    </div>
    <!-- /.card-header -->
    <div class="card-body row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Town.Id" />
            <div class="form-group">
                <label asp-for="Town.Name" class="control-label"></label>
                <input asp-for="Town.Name" class="form-control" />
                <span asp-validation-for="Town.Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="RegionId">Region</label>
                <div class="row">
                    <select id="ddlRegions" asp-for="RegionId" name="RegionId" asp-items="ViewBag.Regions" class="form-control pb-1 col-12">
                        <option value="">--  Select Region  --</option>
                    </select>
                </div>
                <span asp-validation-for="RegionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">
    $(function () {
        $("#ddlRegions").select2();
    });
    $("body").on("change", "#ddlRegions", function () {
        $("input[name=RegionId]").val($(this).find("option:selected").text());
    });
</script>