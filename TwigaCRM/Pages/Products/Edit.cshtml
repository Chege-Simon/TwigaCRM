@page
@model TwigaCRM.Pages.Products.EditModel

@{
    ViewData["Title"] = "Edit Product";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<style>
    .select2-selection__rendered {
        line-height: 31px !important;
    }

    .select2-container .select2-selection--single {
        height: 35px !important;
    }

    .select2-selection__arrow {
        height: 34px !important;
    }
</style>
<div class="card">
    <div class="card-header row">
        <h3 class="card-title col-md-10">Edit Product</h3>
        <span class="col-md-2">
            @*<a class="btn btn-success" href="" id="Input" data-toggle="modal" data-target="#InputModal">New Role</a>*@
        </span>
    </div>
    <!-- /.card-header -->
    <div class="card-body row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Code" class="control-label"></label>
                <input asp-for="Product.Code" class="form-control" />
                <span asp-validation-for="Product.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.UnitOfMeasure" class="control-label"></label>
                <select asp-for="Product.UnitOfMeasure" class="form-control">
                    <option value="">-- Select Unit Of Measure --</option>
                    <option value="KG">Kilo Gram (KG)</option>
                    <option value="L">Litre (L)</option>
                    <option value="Pcs">Pieces (Pcs)</option>
                </select>
                <span asp-validation-for="Product.UnitOfMeasure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.PackagingSize" class="control-label"></label>
                <input asp-for="Product.PackagingSize" class="form-control" />
                <span asp-validation-for="Product.PackagingSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.BusinessLineId" class="control-label">Busines Line</label>
                    <select id="ddlBusinessLines" asp-for="Product.BusinessLineId" name="Product.BusinessLineId" asp-items="ViewBag.BusinessLines" class="form-control">
                        <option value="">--  Select Business Line  --</option>
                    </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
<div>
    <a asp-page="./Products">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script type="text/javascript">
    $(function () {
        $("#ddlBusinessLines").select2();
    });
    $("body").on("change", "#ddlBusinessLines", function () {
        $("input[name=BusinessLineId]").val($(this).find("option:selected").text());
    });
</script>